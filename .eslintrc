// "off" or 0 - turn the rule off
// "warn" or 1 - turn the rule on as a warning (doesn't affect exit code)
// "error" or 2 - turn the rule on as an error (exit code will be 1)
{
  "extends": "vue",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "strict": 0,
    "no-useless-escape": 0,
    "semi": ["error", "never"],
    "require-jsdoc": 0,
    "space-before-function-paren":"warn"
  }
}
